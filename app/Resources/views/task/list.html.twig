{% extends 'base.html.twig' %}

{% block header_img %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">
                            {% if task.isDone %}
                                <span class="glyphicon glyphicon-ok"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-remove"></span>
                            {% endif %}
                        </h4>

                        <h4>
                            <a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
                        </h4>

                        <p>{{ task.content }}</p>

                        <p class="text-muted" style="margin-top: 10px;">
                            <strong>Auteur :</strong>
                            {% if task.user %}
                                {{ task.user.username }}
                            {% else %}
                                <em>Utilisateur anonyme</em>
                            {% endif %}
                        </p>
                    </div>

                    <div>
                        <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                            <button class="btn btn-success btn-sm pull-right">
                                {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                            </button>
                        </form>
                            {% if app.user and (
                                (task.user and task.user.id == app.user.id) or
                                (task.user is null and is_granted('ROLE_ADMIN'))
                            ) %}
                                <form action="{{ path('task_delete', {'id' : task.id }) }}" method="post" style="display:inline;">
                                    <button
                                        class="btn btn-danger btn-sm pull-right"
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');"
                                    >
                                        Supprimer
                                    </button>
                                </form>
                            {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée.
                <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
